<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.match.email.mapper.EmailRecordMapper">
    
    <resultMap type="EmailRecord" id="EmailRecordResult">
        <result property="id" column="id"/>
        <result property="sender" column="sender"/>
        <result property="receiver" column="receiver"/>
        <result property="subject" column="subject"/>
        <result property="content" column="content"/>
        <result property="status" column="status"/>
        <result property="errorMsg" column="error_msg"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
    
    <sql id="selectEmailRecordVo">
        select id, sender, receiver, subject, content, status, error_msg, create_time from email_record
    </sql>
    
    <select id="selectEmailRecordById" parameterType="Long" resultMap="EmailRecordResult">
        <include refid="selectEmailRecordVo"/>
        where id = #{id}
    </select>
    
    <select id="selectEmailRecordList" parameterType="EmailRecord" resultMap="EmailRecordResult">
        <include refid="selectEmailRecordVo"/>
        <where>  
            <if test="sender != null  and sender != ''"> and sender = #{sender}</if>
            <if test="receiver != null  and receiver != ''"> and receiver = #{receiver}</if>
            <if test="subject != null  and subject != ''"> and subject = #{subject}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="errorMsg != null  and errorMsg != ''"> and error_msg = #{errorMsg}</if>
        </where>
    </select>
    
    <insert id="insertEmailRecord" parameterType="EmailRecord" useGeneratedKeys="true" keyProperty="id">
        insert into email_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sender != null and sender != ''">sender,</if>
            <if test="receiver != null and receiver != ''">receiver,</if>
            <if test="subject != null and subject != ''">subject,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="errorMsg != null and errorMsg != ''">error_msg,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sender != null and sender != ''">#{sender},</if>
            <if test="receiver != null and receiver != ''">#{receiver},</if>
            <if test="subject != null and subject != ''">#{subject},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="errorMsg != null and errorMsg != ''">#{errorMsg},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>
    
    <update id="updateEmailRecord" parameterType="EmailRecord">
        update email_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="sender != null and sender != ''">sender = #{sender},</if>
            <if test="receiver != null and receiver != ''">receiver = #{receiver},</if>
            <if test="subject != null and subject != ''">subject = #{subject},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="errorMsg != null and errorMsg != ''">error_msg = #{errorMsg},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>
    
    <delete id="deleteEmailRecordById" parameterType="Long">
        delete from email_record where id = #{id}
    </delete>
    
    <delete id="deleteEmailRecordByIds" parameterType="String">
        delete from email_record where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>