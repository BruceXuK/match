<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.match.event.mapper.RegistrationMapper">

    <resultMap type="Registration" id="RegistrationResult">
        <result property="id" column="id"/>
        <result property="eventId" column="event_id"/>
        <result property="userId" column="user_id"/>
        <result property="registrationNo" column="registration_no"/>
        <result property="userName" column="user_name"/>
        <result property="userPhone" column="user_phone"/>
        <result property="userEmail" column="user_email"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectRegistrationVo">
        select id, event_id, user_id, registration_no, user_name, user_phone, user_email, status, create_by, create_time, update_by, update_time, remark from registration
    </sql>

    <select id="selectRegistrationById" parameterType="Long" resultMap="RegistrationResult">
        <include refid="selectRegistrationVo"/>
        where id = #{id}
    </select>

    <select id="selectRegistrationList" parameterType="Registration" resultMap="RegistrationResult">
        <include refid="selectRegistrationVo"/>
        <where>
            <if test="eventId != null ">and event_id = #{eventId}</if>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="registrationNo != null  and registrationNo != ''">and registration_no = #{registrationNo}</if>
            <if test="userName != null  and userName != ''">and user_name like concat('%', #{userName}, '%')</if>
            <if test="userPhone != null  and userPhone != ''">and user_phone = #{userPhone}</if>
            <if test="userEmail != null  and userEmail != ''">and user_email = #{userEmail}</if>
            <if test="status != null  and status != ''">and status = #{status}</if>
        </where>
        order by create_time desc
    </select>

    <select id="selectRegistrationByUserIdAndEventId" resultMap="RegistrationResult">
        <include refid="selectRegistrationVo"/>
        where user_id = #{userId} and event_id = #{eventId}
    </select>

    <insert id="insertRegistration" parameterType="Registration" useGeneratedKeys="true" keyProperty="id">
        insert into registration
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="eventId != null">event_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="registrationNo != null and registrationNo != ''">registration_no,</if>
            <if test="userName != null and userName != ''">user_name,</if>
            <if test="userPhone != null and userPhone != ''">user_phone,</if>
            <if test="userEmail != null and userEmail != ''">user_email,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="remark != null and remark != ''">remark,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="eventId != null">#{eventId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="registrationNo != null and registrationNo != ''">#{registrationNo},</if>
            <if test="userName != null and userName != ''">#{userName},</if>
            <if test="userPhone != null and userPhone != ''">#{userPhone},</if>
            <if test="userEmail != null and userEmail != ''">#{userEmail},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
            sysdate()
        </trim>
    </insert>

    <update id="updateRegistration" parameterType="Registration">
        update registration
        <trim prefix="SET" suffixOverrides=",">
            <if test="eventId != null">event_id = #{eventId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="registrationNo != null and registrationNo != ''">registration_no = #{registrationNo},</if>
            <if test="userName != null and userName != ''">user_name = #{userName},</if>
            <if test="userPhone != null and userPhone != ''">user_phone = #{userPhone},</if>
            <if test="userEmail != null and userEmail != ''">user_email = #{userEmail},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            update_time = sysdate()
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRegistrationById" parameterType="Long">
        delete from registration where id = #{id}
    </delete>

    <delete id="deleteRegistrationByIds" parameterType="String">
        delete from registration where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>